---
import { getCollection } from "astro:content";
import BaseLayout from "../layouts/BaseLayout.astro";

const pageTitle = "Frontend Press Review";
const allPosts = await getCollection("posts");
const tags = [...new Set(allPosts.map((post) => post.data.tags).flat())];
---

<BaseLayout pageTitle={pageTitle}>
	<h2 class="text-slate-800 font-semibold pb-4">By date</h2>
	<ul class="pb-6">
		{allPosts.map((post) => <li class="mb-2"><a class="text-slate-800 text-lg font-light" href={post.slug}>{post.data.title}</a></li>)}
	 </ul>
	 <h2 class="text-slate-800 font-semibold pb-4">By topic</h2>
	 <ul class="pb-6">
		{tags.map((tag) => <li class="inline-block mb-2 mr-2"><a class="text-sm text-blue-900 bg-blue-100 px-2 py-1 rounded" href={tag}>{tag}</a></li>)}
	 </ul>
</BaseLayout>
