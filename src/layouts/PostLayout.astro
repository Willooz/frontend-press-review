---
import BaseLayout from './BaseLayout.astro';
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
   <article class="prose prose-slate prose-h1:text-slate-800 prose-h1:text-3xl prose-ul:list-none prose-ul:p-0 prose-li:p-0">
      <div class="flex items-center -ml-12">
         <div class="flex justify-center items-stretch mr-4">
            <a class="no-underline leading-none" href="/">
               <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-8 h-8 fill-slate-300">
                  <path fill-rule="evenodd" d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25zm-4.28 9.22a.75.75 0 000 1.06l3 3a.75.75 0 101.06-1.06l-1.72-1.72h5.69a.75.75 0 000-1.5h-5.69l1.72-1.72a.75.75 0 00-1.06-1.06l-3 3z" clip-rule="evenodd" />
                </svg>
            </a>
         </div>
         <h1 class="mb-0">{frontmatter.title}</h1>
      </div>
      <slot />
   </article>
</BaseLayout>
